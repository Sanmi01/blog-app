<% if (title == 'Create Comment') { %>
    <div class="col-sm-12">    
           <div class="jumbotron">
               <h2>Add Comment</h2>
               <form action="" method="post">
                 Username:<br>
                 <input type="text" name="username" placeholder="Username">
                 <br>
                 title:<br>
                 <input type="text" name="title" placeholder="title">
                 <br>
                 body:<br>
                 <input type="textarea" name="body" placeholder="Comment here">
                 <br>
                 Post:<br>
                <select name = "post_id" class="form-control">
                    <% posts.forEach(function(post) { %>
                    <option  value="<%= post.id %>"><%= post.post_title %></option>
                    <br/>
                    <% }); %>
                </select>
                 <br><br>
                 <input type="submit" value="Submit">
               </form>
           </div>
       </div>
   <% } if (title == 'Update Comment') { %>
   <div class="jumbotron">
       <h2>Edit Comment</h2>
               <form action="" method="post">
                 Title:<br>
                 <input type="text" name="title" value= <%= comment.title%> >
                 <br>
                 body:<br>
                 <input type="textarea" name="body" value= <%= comment.body%> >
                 <br><br>
                 <input type="submit" value="Submit">
               </form>
           </div>
   <% } else { %>
       
   <% } %>